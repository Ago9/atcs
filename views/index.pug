extends layout

block content
  header(class='parallax')
    h1= "Visualizing museum visitors' behavior"
  
  div(class='container bottom-margin')
    div(class='row top-margin')

      div(class='col-8')
        div(id='simulationButton' class='simulationButton')
          img(class="mapImage", src="../images/clean_map.jpg", alt="", width="100%", height="100%")
          div(class='overImageText') Start Visit Simulation
      
      div(class='col-4')
        div(class='simulationDescription') See how a selected group moved around in the museum between exhibits

  div(class="parallax")

  div(class="container")
    div(class="row justify-content-md-center top-margin bottom-margin")

      div(class="col-lg-4")
        h1(class="buttonDescription") Visualize statistics about the museum visit

      div(class="col-lg-4")
        div(id="statsButton" class="statsButton") Get General Stats
  
  div(class="parallax")

  script(src="/javascripts/buttonsHandler.js")
